<div class="container">
  <div>
    <h1>Reviews</h1>
    <% @reviews.each do |review| %>
      <div class="card mb-2">
        <div class="card-body">
          <h5 class="card-title">Rating: <%= review.rating%> </h5>
          <p class="card-text"> <%= review.content %> </p>
        </div>
      </div>
    <% end %>

    <%= link_to 'Go back to restaurant', restaurant_path(@restaurant), class: 'btn btn-secondary' %>
    <%= link_to 'Create review', new_restaurant_review_path, class: 'btn btn-secondary' %>
  </div>
</div>
